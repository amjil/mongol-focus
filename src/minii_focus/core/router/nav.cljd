(ns minii-focus.core.router.nav
  (:require
    [minii-focus.core.state.router :as state]))

(defn navigate!
  ([route]
   (navigate! route nil))
  ([route params]
   (reset! state/router-state
           {:route route
            :params params})))

(defn back!
  []
  ;; Simplified version, can be upgraded to stack
  (navigate! :inbox))

