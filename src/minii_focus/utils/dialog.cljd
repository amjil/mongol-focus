(ns minii-focus.utils.dialog
  "Dialog utility functions for common dialog operations"
  (:require
   ["package:flutter/material.dart" :as m]))

(defn close-dialog
  "Close dialog using Navigator.pop.
  Optionally calls on-cancel callback before closing."
  [ctx & [on-cancel]]
  (when on-cancel (on-cancel))
  (-> (m/Navigator.of ctx) (.pop))
  nil)

